            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Sök</h3>
            </div>
            <div class="card-body">


                <form method="get" asp-controller="Product" asp-action="Index">

                    <div class="form-row align-items-center">
                        <div class="col-auto">
                            <input type="text" class="form-control" asp-for="q">
                        </div>
