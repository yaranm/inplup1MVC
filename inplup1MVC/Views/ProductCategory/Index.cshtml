<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Produktkategorier</h3>
            </div>

            <div class="card-body">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Namn</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var productCategory in Model.ProductCategories)
                        {
                        <tr>
                            <td>@productCategory.Name</td>
                            <td>@productCategory.Id</td>
                            <td><a asp-controller="ProductCategory" asp-action="Edit" asp-route-Id="@productCategory.Id" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                            <td><a asp-controller="Product" asp-action="Index" asp-route-q="@productCategory.Name"  class="btn btn-secondary active" role="button" aria-pressed="true">välj</a></td>

                        </tr>
                        }

                    </tbody>
                </table>


            </div>
        </div>
    </div>

    <a asp-controller="ProductCategory" asp-action="New" class="btn btn-secondary" role="button" aria-pressed="true">
        Skapa ny
    </a>


</div>