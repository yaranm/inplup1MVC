@model inplup1MVC.ViewModels.ProductEditViewModel

@{ 
    ViewData["Title"] = "Edit Produkter";
}
<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Edit Product</h3>
                </div>

                <div class="card-body">
                    <form method="post" asp-controller="Product" asp-action="Edit">

                        

                        <div class="form-group">
                            <label asp-for="Namn">Namn</label>
                            <input class="form-control" asp-for="Namn">
                        </div>
                        <div class="form-group">
                            <label asp-for="Pris">Pris</label>
                            <input class="form-control" asp-for="Pris">
                        </div>

                        <div class="form-group">
                            <label asp-for="SelectedProductCategoryId">Kategorier</label>
                            <select class="form-control"
                                    asp-for="SelectedProductCategoryId"
                                    asp-items="Model.AllProductCategory"></select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Comment">Comment</label>
                            <textarea rows="5" cols="30"
                                      class="form-control" asp-for="Comment"></textarea>
                            <span asp-validation-for="Comment" class="field-validation-error"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>