@model inplup1MVC.ViewModels.ProductSearchResultViewModel

@{
    ViewData["Title"] = "Produkter";

} 
<section class="py-5">

    <div class="row">

        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Produkt</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Namn</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Pris</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produkt in Model.Produkter)
                            {
                                <tr>
                                    <td>@produkt.Namn</td>
                                    <td>@produkt.ProductCategory</td>
                                    <td>@produkt.Pris</td>

                                    <td><a asp-controller="Produkt" asp-action="Edit" asp-route-Id="@produkt.Id" class="btn btn-secondary active" role="button" aria-pressed="true">Edit</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <a asp-controller="Produkt" asp-action="New" class="btn btn-secondary" role="button" aria-pressed="true">
            Create new
        </a>
    </div>
</section>
